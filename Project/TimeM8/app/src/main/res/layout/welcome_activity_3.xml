<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_300">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кастомизируемый внешний вид"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:paddingRight="40dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_logo_orange" />

            <ImageView
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_logo_blue" />
            <ImageView
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_logo_green" />
            <ImageView
                android:padding="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_logo_purple" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Возможность подобрать цвета
приложения по вкусу"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>
    </LinearLayout>
</RelativeLayout>